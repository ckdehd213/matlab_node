  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // 현재 페이지의 URL을 가져옵니다.
      var currentURL = window.location.href;
      // URL 객체를 생성하여 URL을 파싱합니다.
      var url = new URL(currentURL);
      // 경로(path)를 가져옵니다.
      var path = url.pathname;
      // 네비게이션 바의 각 링크 요소들을 가져옵니다.
      var navLinks = document.querySelectorAll(".navbar-nav .nav-link");
      // 각 링크 요소에 대해 순회하면서 href 속성과 현재 경로(path)를 비교하여 클래스를 변경합니다.
      navLinks.forEach(function (link) {
        // 현재 링크 요소의 href 속성 값을 가져옵니다.
        var href = link.getAttribute("href");
        // 현재 링크 요소의 href 속성 값과 현재 경로(path)가 일치하는지 확인합니다.
        if (href === path) {
          // 일치한다면 클래스를 추가하여 스타일을 변경합니다.
          link.classList.add("active");
        } else {
          // 일치하지 않는다면 클래스를 제거합니다.
          link.classList.remove("active");
        }
      });
    });
